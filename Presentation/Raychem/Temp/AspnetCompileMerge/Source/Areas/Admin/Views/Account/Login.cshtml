@model Corno.Raychem.CustomerPortal.Areas.Admin.Models.LoginViewModel

@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <!-- Apple devices fullscreen -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <!-- Apple devices fullscreen -->
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

    <title>Jugad - Login</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <!-- Bootstrap responsive -->
    <link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css">
    <!-- icheck -->
    <link rel="stylesheet" href="~/Content/plugins/icheck/all.css">
    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/Content/style.css">
    <!-- Color CSS -->
    <link rel="stylesheet" href="~/Content/themes.css">

    <!-- jQuery -->
    <script src="~/Scripts/jquery.min.js"></script>

    <!-- Nice Scroll -->
    <script src="~/Scripts/plugins/nicescroll/jquery.nicescroll.min.js"></script>
    <!-- Validation -->
    <script src="~/Scripts/plugins/validation/jquery.validate.min.js"></script>
    <script src="~/Scripts/plugins/validation/additional-methods.min.js"></script>
    <!-- icheck -->
    <script src="~/Scripts/plugins/icheck/jquery.icheck.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/eakroko.js"></script>
    <!--[if lte IE 9]>
        <script>
            $(document).ready(function() {
                $('input, textarea').placeholder();
            });
        </script>
    <![endif]-->
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/img/favicon.ico" />
    <!-- Apple devices Homescreen icon -->
    <link rel="apple-touch-icon-precomposed" href="~/img/apple-touch-icon-precomposed.png" />
</head>
<body class='login'>
    <div class="wrapper">
        <h1><a href="#"><img src="~/Areas/Wallet/Images/4EverLogo120x70.png" alt="" class='retina-ready' width="120" height="70">Jugad Pay</a></h1>
        <div class="login-body">
            <h2>SIGN IN</h2>
            @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { style = "color: red" })
                <div class="control-group">
                    <div class="email controls">
                        <input type="text" name='username' placeholder="User Name" class='input-block-level' data-rule-required="true" data-rule-email="true">
                    </div>
                </div>
                <div class="control-group">
                    <div class="pw controls">
                        <input type="password" name="password" placeholder="Password" class='input-block-level' data-rule-required="true">
                    </div>
                </div>
                <div class="submit">
                    <div class="remember">
                        <input type="checkbox" name="remember" class='icheck-me' data-skin="square" data-color="blue" id="remember"> <label for="remember">Remember me</label>
                    </div>
                    <input type="submit" value="Sign me in" class='btn btn-primary'>
                </div>
            }
            <div class="forget">
                <a href="#"><span>Forgot password?</span></a>
                <a href="@Url.Action("RegisterDirect", "Account")"><span>Sign Up</span></a>
            </div>
        </div>
    </div>
</body>
</html>