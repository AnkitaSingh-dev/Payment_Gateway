@model Corno.Raychem.CustomerPortal.Areas.Admin.Models.SelectUserRolesViewModel

@{
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

@{
    ViewBag.Index = "Index";
    ViewBag.Create = "Create";
    ViewBag.Edit = "Edit";
    ViewBag.Details = "Details";
    ViewBag.Delete = "Delete";
    ViewBag.UserRoles = "UserRoles";
}

@{
    Page.Title = "User Roles";
    ViewBag.MainMenu = "Transactions";
    ViewBag.CurrentSitemap = "User";
    ViewBag.BoxTitle = "Edit User Roles";

    ViewBag.Controller = "Account";

    ViewBag.SubmitAction = ViewBag.UserRoles;
}

@Html.HiddenFor(m => m.Id)
<table class="table table-hover table-nomargin dataTable table-bordered">
    <thead>
        <tr>
            <th class="text-center span1">Select</th>
            <th class="text-center span1 sorting_desc">Role</th>
        </tr>
    </thead>
    <tbody>
        @for (var index = 0; index < Model.Roles.Count; index++)
        {
            <tr>
                <td class="text-center">
                    @Html.CheckBoxFor(x => x.Roles[index].Selected)
                </td>
                <td>
                    @Html.LabelFor(x => x.Roles[index].Selected, Model.Roles[index].RoleName)
                    @Html.HiddenFor(x => x.Roles[index].RoleName)
                </td>
            </tr>
        }
    </tbody>
</table>

