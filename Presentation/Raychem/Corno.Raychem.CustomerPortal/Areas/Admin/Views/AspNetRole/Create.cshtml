@model Corno.Raychem.CustomerPortal.Areas.Admin.Models.AspNetRole

@{
    Layout = "~/Views/Shared/_LayoutCreate.cshtml";
}

@{
    ViewBag.Index = "Index";
    ViewBag.Create = "Create";
    ViewBag.Edit = "Edit";
    ViewBag.Details = "Details";
    ViewBag.Delete = "Delete";
}

@{
    Page.Title = "Roles";
    ViewBag.MainMenu = "Administration";
    ViewBag.CurrentSitemap = "Roles";
    ViewBag.BoxTitle = "Create New Role";

    ViewBag.Controller = "AspNetRole";

    ViewBag.SubmitAction = ViewBag.Create;
}

<div class="control-group">
    <label class="control-label">Role Name <span style="color: red">*</span>:</label>
    <div class="controls">
        @Html.TextBoxFor(m => m.Name, new { id = "Name", placeholder = "Enter City Name", @class = "input-xlarge", data_rule_required = "true", data_rule_minlength = "2" })
    </div>
</div>

